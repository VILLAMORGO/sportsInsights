<div class="flex flex-col">
  <section class="w-full min-h-32 md:min-h-80"></section>
  <section class="w-full min-h-80 px-10 pt-8 flex flex-col">

    <p class="text-justify text-xl md:text-2xl tracking-wider px-0 md:px-40">
      Hello! Thank you for participating in our survey. We appreciate your time and input. Let's start by understanding a bit about your child's involvement in sports.
    </p>
    <br> <br>
    <%= form_with model: @user, url: create_user_path, local: true, class: 'mt-4 mx-auto w-full md:w-1/2' do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="bg-red-100 text-red-700 p-4 rounded-md mb-4">
          <h2 class="text-lg"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul class="list-disc pl-5">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="flex flex-col md:flex-row justify-center">
        <div class="field mb-4 md:mb-0 mt-5 md:mt-0">
          <%= form.text_field :name, placeholder: "Parents Name", class: 'w-full md:w-80 mx-auto md:mx-3 px-4 py-2 h-11 border-2 border-t-0 border-l-0 border-r-0 border-emerald-700 tracking-wider font-medium text-lg' %>
        </div>

        <div class="actions text-center">
          <%= form.submit "Continue", class: 'w-full text-lg tracking-wide md:w-40 px-2 py-2 mx-auto mt-28 md:mt-0 border border-green-300 text-white bg-emerald-700 text-center rounded-md cursor-pointer' %>
        </div>
      </div>
    <% end %>
  </section>
</div>
