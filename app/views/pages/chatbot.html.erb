<div class="flex flex-col min-h-screen max-h-screen">
  <section class="w-full md:w-2/3 min-h-12  p-4 mx-auto ">
    <h3 class="font-medium tracking-wider">Chatbot</h3>
  </section>
  <section class="w-full min-h-[540px] px-10 pt-8 flex flex-col border-t-2 border-green-700">
    
   
  </section>
  <section class="w-full min-h-10 md:min-h-28 px-6 flex flex-col justify-end pb-5">
    <textarea name="" id="expandableTextarea" rows="1" class="w-full md:w-1/2 min-h-8 md:min-h-12 px-6 py-auto mx-auto border border-zinc-200 text-black bg-zinc-50 rounded-3xl"></textarea>
  </section>
</div>

<script>
    const textarea = document.getElementById('expandableTextarea');

    textarea.addEventListener('input', function() {
        // Reset the height to allow shrinking
        this.style.height = 'auto';
        // Set the height to scrollHeight (ensuring it can grow)
        this.style.height = (this.scrollHeight > 120 ? 120 : this.scrollHeight) + 'px';
    });
</script>
